 SELECT controls.code,
    controls.number AS number_ctrl,
    controls.incoming,
    controls.number_ud,
    controls.number_ctrl_ud,
    controls.datecontrol_ud,
    controls.orderer,
    controls.datecontrol,
    controls.datedone,
    controls.datecontrol - 'now'::text::date AS days,
    controls.executor,
    incoming_document.number_in,
    incoming_document.date_in,
    incoming_document.number_primary,
    incoming_document.date_primary,
    incoming_document.senders_numbers,
    incoming_document.grif,
    incoming_document.sheets,
    incoming_document.copies,
    incoming_document.copies_numbers,
    incoming_document.subject,
    incoming_document.orders,
    incoming_document.instructions,
    incoming_document.notes,
    incoming_document.control,
    incoming_document.out_where,
    incoming_document.out_details,
    incoming_document.out_date
   FROM controls
     LEFT JOIN incoming_document ON incoming_document.code = controls.incoming;